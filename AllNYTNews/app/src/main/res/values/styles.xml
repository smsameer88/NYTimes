<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_text_default_blue">
        <item name="android:textColor">@color/color_text_default_blue</item>
        <item name="android:textSize">@dimen/dimen_text_default_blue</item>
    </style>

    <style name="style_text_xsmall">
        <item name="android:textColor">@color/color_xsmall</item>
        <item name="android:textSize">@dimen/dimen_xsmall</item>
    </style>

    <style name="style_text_xxsmall">
        <item name="android:textColor">@color/color_xsmall</item>
        <item name="android:textSize">@dimen/dimen_xsmall</item>
    </style>

    <color name="color_text_default_blue">#0054ae</color>
    <color name="color_xsmall">#666666</color>
    <dimen name="dimen_text_default_blue">18sp</dimen>
    <dimen name="dimen_xsmall">14sp</dimen>
</resources>
